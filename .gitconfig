[alias]
  br  = branch
  c = commit -am
  co = checkout
  d = diff --color --color-words --abbrev
  l = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --
  p = push
  s = status -s
  up = pull
  push = push --set-upstream origin master

[core]
  attributesfile = ~/.gitattributes
  editor = code --wait
  excludesfile = ~/.gitignore
  ignorecase = false
  pager = diff-so-fancy | less --tabs=4 -RFX

# so much color
[color]
  ui = always

[color "diff"]
  meta = yellow bold
  commit = green bold
  frag = magenta bold
  old = red bold
  new = green bold
  whitespace = red reverse

[color "diff-highlight"]
  oldNormal = red bold
  oldHighlight = "red bold 52"
  newNormal = "green bold"
  newHighlight = "green bold 22"

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[credential]
  helper = osxkeychain

[commit]
  gpgsign = true

[fetch]
  prune = true

[help]
  autocorrect = 1

